{
  "name": "ngrx-firebase",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ngrx-firebase/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/ngrx-firebase",
        "main": "packages/ngrx-firebase/index.ts",
        "tsConfig": "packages/ngrx-firebase/tsconfig.lib.json",
        "assets": [
          "packages/ngrx-firebase/*.md"
        ]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs ngrx-firebase readFromPackageJson {args.tag} {args.otp}"
      },
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/ngrx-firebase/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/ngrx-firebase/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
