{
  "name": "ngflex-libs",
  "version": "4.2.0",
  "license": "MIT",
  "description": "NGFlex ngrx, firebase and js libraries",
  "packageManager": "yarn@4.6.0",
  "repository": {
    "type": "github",
    "url": "https://github.com/flyflex/ngflex-libs"
  },
  "author": "FlyFlex",
  "scripts": {
    "build:ngrx-firebase": "nx run ngrx-firebase:build",
    "build": "nx run-many --target=build --all",
    "lint": "nx run-many --target=lint --all",
    "test:affected": "nx affected --target=test --coverage",
    "test": "nx run-many --target=test --all --coverage",
    "test:watch": "jest --watch",
    "publish:ngrx-firebase": "nx run ngrx-firebase:publish --tag=latest --otp",
    "publish:ngrx-firebase:rc": "nx run ngrx-firebase:publish --tag=next --otp",
    "publish:merge-coverage-reports": "nx run merge-coverage-reports:publish --tag=latest --otp",
    "publish:fullcalendar-dayjs": "nx run fullcalendar-dayjs:publish --tag=latest --otp",
    "publish:all": "nx run-many --target=publish --all --parallel=1 --tag=latest --otp",
    "verif:all": "yarn build && yarn lint && yarn test",
    "merge-reports": "nx run merge-coverage-reports:merge",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "dependencies": {
    "minimist": "1.2.8",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@angular/fire": "18.0.1",
    "@fullcalendar/core": "6.1.15",
    "@ngrx/store": "19.0.0",
    "@nx/eslint": "20.3.1",
    "@nx/eslint-plugin": "20.3.1",
    "@nx/jest": "20.3.1",
    "@nx/js": "20.3.1",
    "@nx/workspace": "20.3.1",
    "@swc-node/register": "1.10.9",
    "@swc/core": "1.10.6",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "29.5.14",
    "@types/minimist": "1.2.5",
    "@types/node": "22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "dayjs": "1.11.13",
    "eslint": "9.17.0",
    "firebase": "11.1.0",
    "fs-extra": "11.2.0",
    "glob": "11.0.0",
    "istanbul-reports": "3.1.7",
    "jest": "29.7.0",
    "jest-date-mock": "1.0.10",
    "jest-environment-jsdom": "29.7.0",
    "jest-environment-node": "29.7.0",
    "jest-haste-map": "29.7.0",
    "jest-preset-angular": "14.4.2",
    "jest-resolve": "29.7.0",
    "nx": "20.3.1",
    "prettier": "3.4.2",
    "rxjs": "7.8.1",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.7.3"
  },
  "nx": {
    "includedScripts": []
  }
}
